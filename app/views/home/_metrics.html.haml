  .home-statistics-container
    .home-statistics
      .home-statistics-item
        %hr/
        %div
          %h4
            = format_number_abbreviated(@metrics[:ontologies_count])
          %p= t("home.ontologies")
      .home-statistics-item
        %hr/
        %div
          %h4
            = format_number_abbreviated(@metrics[:class_count])
          %p= t("home.classes")
