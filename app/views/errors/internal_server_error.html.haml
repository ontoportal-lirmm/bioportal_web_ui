.d-flex.align-items-center.flex-column.position-relative.error-page
  = inline_svg("errors/agroportal.svg")
  %h1.position-absolute.text-center{style: "top: 425px; font-size: 30px; font-weight: 800; color: #263238;"}
    %div
      = t("errors.error_message")
    %div
      = t("errors.notification_error")
  .buttons.d-flex.justify-content-center.mt-3
    %div{style: "width: 216px;"}
      = render Buttons::RegularButtonComponent.new(id:'Home-button', value: t("errors.go_home_button"), variant: "secondary", href: "/")
    %div{style: "width: 216px; margin-left: 22px"}
      = render Buttons::RegularButtonComponent.new(id:"feedback-button" ,value: t("errors.send_feedback_button"), variant: "primary", href: "/feedback?location=#{@referer_url}")



