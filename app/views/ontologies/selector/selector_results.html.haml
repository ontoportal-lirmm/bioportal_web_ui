= turbo_frame_tag 'selector_results_frame' do
    .ontologies-selector-results
        .horizontal-line                  
        .results-number
            = "Showing #{@ontologies.length} of #{@total_ontologies_number}" 
            %span.select-all{'data-action': 'click->ontologies-selector#selectall'}
                select all
        .ontologies
            - @ontologies.each do |ontology|
                .ontology{'data-ontologies-selector-target': 'ontology'}
                    = render ChipsComponent.new(label: "#{ontology.name} (#{ontology.acronym})", name: ontology.acronym)
        .horizontal-line                    
        .action-buttons
            .button
                = render Buttons::RegularButtonComponent.new(id:'cancel-selector', value: "Cancel", variant: "secondary", state:'regular') do |btn|
                    = btn.icon_left do
                        = inline_svg_tag 'icons/cancel.svg'
            .button
                = render Buttons::RegularButtonComponent.new(id:'apply-selector', value: "Apply", variant: "primary", state: 'regular') do |btn|
                    = btn.icon_right do
                        = inline_svg_tag "check.svg"


