= turbo_frame_tag 'mappings_table' do
  = render TableComponent.new(id: 'annotator-table', borderless: true, layout_fixed: false, outline: true, sort_column: '0', no_init_sort: true) do |t|
    - t.header do |h|
      - h.th do
        Ontology
      - h.th do
        Mappings count
      - h.th do
        Action
    - @mapping_counts.each do |mapping|
      - t.row do |r|
        - r.td do
          = mapping[:target_ontology].name
        - r.td do
          = mapping[:count]
        - r.td do
          = link_to 'Show mappings', '#'
        