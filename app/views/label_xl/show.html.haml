= render_in_modal do
  - if @label_xl && !@label_xl.empty?
    = render ConceptDetailsComponent.new(id:'skos-xl-label', acronym: @ontology_acronym,
                properties: @label_xl.properties,
                top_keys: %w[description comment],
                bottom_keys: %w[disjoint subclass is_a has_part],
                exclude_keys: []) do |c|
      - c.header(stripped: true) do |t|
        - t.add_row({th: 'ID'}, {td: link_to_with_actions(@label_xl["@id"])})
        - t.add_row({th: 'Preferred Name'}, {td: display_in_multiple_languages(get_label_xl_label(@label_xl))})
        - t.add_row({th: 'Type'}, {td: @label_xl["@type"]})
