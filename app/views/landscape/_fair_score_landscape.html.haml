%div.card.mb-3{'data-controller': 'fair-score-landscape'}
  %div.card-header
    %div.d-flex.align-items-end.justify-content-between
      %span
        = render partial: "fair_score/fair_service_header"
      %span
        %span.p-2.badge.badge-secondary
          = t('landscape.average')
          %span.badge.badge-light
            %span#fair-score-average
              0 (0%)
        %span.p-2.badge.badge-secondary
          Min
          %span.badge.badge-light
            %span#fair-score-min
              0 (0%)
        %span.p-2.badge.badge-secondary
          Max
          %span.badge.badge-light
            %span#fair-score-max
              0 (0%)
        %span.p-2.badge.badge-secondary
          Median
          %span.badge.badge-light
            %span#fair-score-median
              0 (0%)
    %div.p-3
      %div#detailedFilter.row.text-left
        .landscape_ontologies_selector{'data-action': 'change->fair-score-landscape#update'}
          = ontologies_selector(id:'landscape_ontologies_selector',name: 'ontology[ontologyId][]')
      %div
        = t('landscape.fairness_interface_introduction')
      %div
        = t('landscape.fairness_interface_details')
  %div.card-body{data:{controller:"fair-score-landscape"}}
    %div#fair-score-charts-container.row
      %div.col
        %span.text-secondary.mt-4
          = t('landscape.fairness_interface_hover_instruction')
        = render partial: "fair_score_criteria_bars" , locals: {data: nil }
      %div#chartjs-tooltip-container.col{style: "height :700px ; position: relative"}